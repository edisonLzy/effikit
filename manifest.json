{
  "manifest_version": 3,
  "version": "0.0.1",
  "name": "EffiKit - 开发工具集成平台",
  "author": "EffiKit Team",
  "description": "强大的开发工具集成平台，提供网络监控、响应编辑、性能分析等功能，提升开发效率。",
  "icons": {
    "48": "images/extension_48.png"
  },
  "action": {
    "default_icon": {
      "48": "images/extension_48.png"
    },
    "default_title": "打开 EffiKit 开发工具"
  },
  "side_panel": {
    "default_path": "sidebar/index.html"
  },
  "permissions": [
    "sidePanel",
    "activeTab",
    "storage",
    "webRequest",
    "webRequestBlocking"
  ],
  "background": {
    "service_worker": "background.ts"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.ts"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}